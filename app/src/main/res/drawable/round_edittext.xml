<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" android:state_focused="true">
    <shape>
        <solid android:color="#7f86def7"/>
        <stroke
            android:width="1.5dp"
            android:color="#87dff7" />
         <corners
            android:radius="30dp" />
    </shape>
</item>

<item android:state_pressed="true" android:state_focused="false">
    <shape>
        <solid android:color="#7f86def7"/>
        <stroke
            android:width="1.5dp"
            android:color="#87dff7" />
        <corners
            android:radius="30dp" />
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="true">
    <shape>
        <solid android:color="#7f86def7"/>
        <stroke
            android:width="1.5dp"
            android:color="#87dff7" />
        <corners
            android:radius="30dp" />
    </shape>
</item>

<item android:state_pressed="false" android:state_focused="false">
    <shape>
        <solid android:color="#7f86def7"/>
        <stroke
            android:width="0.7dp"                
            android:color="#87dff7" />
        <corners
            android:radius="30dp" />
    </shape>
</item>

<item android:state_enabled="true">
    <shape>
        <padding 
                android:left="6dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
            />
    </shape>
</item>

</selector>