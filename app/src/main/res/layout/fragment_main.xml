<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context="com.building.frienting001.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="502.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/image_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="horizontal">

        </android.support.v4.view.ViewPager>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="89.5dp"
            android:layout_marginTop="392dp"
            app:srcCompat="@drawable/editorspick" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/searchText_main"
                android:layout_width="326dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/searchbar_white"
                android:maxLength="30"
                android:maxLines="1" />

            <Button
                android:id="@+id/searchBtn_main"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginEnd="28dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"

                android:layout_marginStart="0dp"
                android:layout_marginTop="15.9dp"
                android:background="@drawable/search_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="475dp"
            android:layout_weight="1"
            android:background="@color/color_transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_1" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_2" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_2" />

            <ImageView
                android:id="@+id/dot4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_2" />

            <ImageView
                android:id="@+id/dot5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_2" />

            <ImageView
                android:id="@+id/dot6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="145dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:src="@drawable/dot_2" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="57.5dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="360dp"
            android:layout_height="57.5dp"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            app:srcCompat="@color/cardview_dark_background" />

    </LinearLayout>

</LinearLayout>