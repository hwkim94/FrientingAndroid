<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/chatting_list_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:background="@drawable/border_blue_4side"
        android:id="@+id/chatting_item_recruitment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@drawable/freinting"
            android:id="@+id/chatting_item_photo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_transparent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/chatting_item_filter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:text="제목"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:id="@+id/chatting_item_title"/>

            <TextView
                android:id="@+id/status_test"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:text="Default"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:id="@+id/chatting_item_hashTag"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/chatting_item_count"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="0/0"/>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sticker"
                android:id="@+id/chatting_item_inout" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/crown"
                android:id="@+id/chatting_item_crown" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/chatting_item_button">
        <Button
            android:id="@+id/chatting_item_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_blue_4side"
            android:text="공고보기"/>

        <Button
            android:id="@+id/chatting_item_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/border_blue_4side"
            android:text="마감하기"/>

        <Button
            android:id="@+id/chatting_item_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_blue_4side"
            android:text="채팅하기"/>
    </LinearLayout>
</LinearLayout>