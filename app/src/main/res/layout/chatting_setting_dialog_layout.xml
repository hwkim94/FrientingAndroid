<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#87dff7">
        <ImageView
            android:layout_margin="16dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/main_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="공고 관리"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:id="@+id/dialog_name"/>
    </LinearLayout>

    <Button
        android:id="@+id/chatting_setting_item_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blue_4side"
        android:text="만남인증"
        android:visibility="gone"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/chatting_setting_dialog_list">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chatting_setting_item_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_blue_4side"
            android:text="모집종료"/>

        <Button
            android:id="@+id/chatting_setting_item_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_blue_4side"
            android:text="나가기"/>
    </LinearLayout>

</LinearLayout>