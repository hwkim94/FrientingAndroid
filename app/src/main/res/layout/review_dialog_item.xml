<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D8D8D8"
        android:id="@+id/review_dialog_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:text="nickname"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/review_dialog_nickname"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:gravity="right">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/frienting_yellow"
                android:src="@drawable/star_grading_2"
                android:scaleType="fitXY"
                android:id="@+id/review_dialog_star1"/>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/frienting_yellow"
                android:src="@drawable/star_grading_2"
                android:scaleType="fitXY"
                android:id="@+id/review_dialog_star2"/>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/frienting_yellow"
                android:src="@drawable/star_grading_2"
                android:scaleType="fitXY"
                android:id="@+id/review_dialog_star3"/>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/frienting_yellow"
                android:src="@drawable/star_grading_2"
                android:scaleType="fitXY"
                android:id="@+id/review_dialog_star4"/>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/frienting_yellow"
                android:src="@drawable/star_grading_2"
                android:scaleType="fitXY"
                android:id="@+id/review_dialog_star5"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:id="@+id/review_dialog_review">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>