<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.building.frienting001.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EDEAEA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:background="#dddd"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:id="@+id/setting_photo"/>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="프로필 수정 >"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="#86def8"
                    android:id="@+id/setting_profile"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:id="@+id/setting_profile_name"
                    android:textSize="19dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디@이메일.com"
                    android:id="@+id/setting_profile_email"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:orientation="horizontal"
                android:id="@+id/setting_email">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="계정관리(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:orientation="horizontal"
                android:id="@+id/setting_push">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="푸쉬알림(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:id="@+id/setting_friend">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="지인차단(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:id="@+id/setting_notice">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="프렌팅 공지사항"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:id="@+id/setting_guide">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="프렌팅 가이드(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:id="@+id/setting_evaluate">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="어플리케이션 평가하기(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:textSize="12dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:text=">"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_black"
                android:orientation="horizontal"
                android:id="@+id/setting_client">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="23dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:text="고객센터(준비 중)"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="23dp"
                    android:paddingRight="16dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:text=">" />
            </LinearLayout>

            <TextView
                android:background="@drawable/border_black"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:paddingLeft="23dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:text="로그아웃"
                android:id="@+id/setting_logout"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>